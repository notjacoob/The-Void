<td>
    <%= button_to "View",  { action: :view_post, controller: :app, id: post.id }, {method: :get, class: 'nav-home-btn', id: 'nav-view-btn' }%>
</td>
<td>
    <%= FirstFive(post.content) %>
</td>
<td>
    <%= post.likes.count %>
</td>
<td>
    <%= post.views %>
</td>
<% if @user.admin %>
  <td>
    <%= render 'admin_bar', user: post.user, post: post, links: false, modview: true %>
  </td>
<% else %>
  <td></td>
<% end %>

<td>
  <%= post.user.id %>
</td>